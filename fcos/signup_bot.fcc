variant: fcos
version: 1.2.0

passwd:
  groups:
    - name: botctrl
      gid: 1001
  users:
    - name: core
      ssh_authorized_keys:
        - ssh-rsa  gsmcwhirter@starnix-mbp2
        - ssh-rsa  gsmcwhirter@starnix-mbp2
      groups:
        - docker
        - botctrl
      shell: /bin/bash
    - name: discordbot
      uid: 1001
      ssh_authorized_keys:
        - ssh-rsa  gsmcwhirter@starnix-mbp2
        - ssh-rsa  gsmcwhirter@starnix-mbp2
      groups:
        - docker
        - botctrl
      shell: /bin/bash
    - name: cicd
      uid: 1002
      ssh_authorized_keys:
        - ssh-rsa  gsmcwhirter@starnix-mbp2
        - ssh-rsa  gsmcwhirter@starnix-mbp2
        - ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIAz6adfarRwXXr614PXRtSdy3tV3RLLNTnp9TaGsLLuU greg+cicd@evogames.org
      groups:
        - botctrl
      shell: /bin/bash

systemd:
  units:
    - name: signup-bot.service
      enabled: true
      contents: |
        [Unit]
        Description=Signup Bot
        After=network-online.target
        Wants=network-online.target

        [Service]
        User=discordbot
        Group=discordbot

        Restart=always

        TimeoutStartSec=60
        ExecStartPre=-/bin/podman kill signup-bot
        ExecStartPre=-/bin/podman rm signup-bot
        ExecStartPre=/bin/podman pull ghcr.io/gsmcwhirter/signup-bot:prod-bot
        ExecStart=/bin/podman \
          run \
          --name=signup-bot \
          --volume=/var/secrets/signup-bot:/secrets:ro \
          --read-only \
          --read-only-tmpfs \
          --init \
          --privileged=false \
          --user=discordbot:discordbot \
          --security-opt label=disable \
          ghcr.io/gsmcwhirter/signup-bot:prod-bot

        [Install]
        WantedBy=multi-user.target

    - name: do-agent.service
      enabled: true
      contents: |
        [Unit]
        Description=DigitalOcean Monitoring Agent
        After=network-online.target
        Wants=network-online.target

        [Service]
        Restart=always

        TimeoutStartSec=60
        ExecStartPre=-/bin/podman kill do-agent
        ExecStartPre=-/bin/podman rm do-agent
        ExecStartPre=/bin/podman pull digitalocean/do-agent:stable
        ExecStart=/bin/podman \
          run \
          --name=do-agent \
          -v /proc:/host/proc:ro \
          -v /sys:/host/sys:ro \
          --init \
          --userns=keep-id \
          -p 9100:9100 \
          digitalocean/do-agent:stable

        [Install]
        WantedBy=multi-user.target

# note: 166536 = 165536 + 1000 (/etc/subuid for discordbot + id for discordbot - 1) -- necessary to mount in the secrets properly
storage:
  directories:
    - path: /var/secrets
      mode: 0770
      user:
        id: 166536
      group:
        name: botctrl
    - path: /var/secrets/signup-bot
      mode: 0700
      user: 
        id: 166536
      group: 
        name: botctrl
  files:
    - path: /etc/sudoers.d/cicd
      contents:
        inline: |
          %botctrl ALL= NOPASSWD: /bin/systemctl start signup-bot.service
          %botctrl ALL= NOPASSWD: /bin/systemctl stop signup-bot.service
          %botctrl ALL= NOPASSWD: /bin/systemctl restart signup-bot.service
    - path: /usr/local/bin/prettify
      mode: 0755
      user:
        name: core
      group:
        name: botctrl
      contents:
        source: "https://github.com/gsmcwhirter/prettify/blob/master/bin/prettify-linux?raw=true"
        verification:
          hash: sha256-bf411e43aeb6ffd877d28e277c54688a1c77508d739dda86ce048e176fc3af4c

    - path: /var/secrets/signup-bot/postgres
      mode: 0400
      user:
        id: 166536
      group:
        name: botctrl
      contents:
        inline: "${POSTGRES_SECRET}"
    - path: /var/secrets/signup-bot/bugsnag
      mode: 0400
      user:
        id: 166536
      group:
        name: botctrl
      contents:
        inline: "${BUGSNAG_KEY}"
    - path: /var/secrets/signup-bot/honeycomb
      mode: 0400
      user:
        id: 166536
      group:
        name: botctrl
      contents:
        inline: "${HONEYCOMB_KEY}"
    - path: /var/secrets/signup-bot/bot_login
      mode: 0400
      user:
        id: 166536
      group:
        name: botctrl
      contents:
        inline: "${BOT_LOGIN}"
    - path: /var/secrets/signup-bot/bot_token
      mode: 0400
      user:
        id: 166536
      group:
        name: botctrl
      contents:
        inline: "${BOT_TOKEN}"